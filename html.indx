body {
    margin: 0;
    padding: 0;
    font-family: Arial, sans-serif;
    background-color: #fcefee; /* pastel pink */
}

.container {
    width: 400px;
    margin: 100px auto;
    background-color: #e8f6f3; /* pastel mint */
    padding: 30px;
    border-radius: 15px;
    text-align: center;
    box-shadow: 0 4px 10px rgba(0,0,0,0.1);
}

h1 {
    color: #6c5ce7; /* pastel ungu */
}

p {
    color: #2d3436;
    font-size: 16px;
}
